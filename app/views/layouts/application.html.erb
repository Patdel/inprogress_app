<!DOCTYPE html>
<html>
<head>
  <title>In Progress</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>

<nav class="navbar navbar-inverse navbar-static-top">
  <div class="container">
    <div class="navbar-header">
      <%= link_to "In Progress", root_path, class: "navbar-brand" %>
    </div>

    <div id="navbar" class="navbar-collapse collapse navbar-right">
      <% if current_artist %>
        <%= link_to "Artist Page", artist_path(current_artist), class: "navbar-brand" %>
        <%= button_to "Logout", logout_path, method: :delete %>
      <% else %>
        <%= link_to "Log In as Artist", login_path, class: "navbar-brand" %>
      <% end %>
    </div><!--/.navbar-collapse -->
  </div>
</nav>

<div class="container">
  <div class="row">
    <%= yield %>
  </div>
</div>

</body>
</html>
